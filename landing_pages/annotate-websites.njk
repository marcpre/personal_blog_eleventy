<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Annotator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">    <style>
        #iframeContainer {
            width: 100%;
            height: 70vh;
            border: 1px solid #000;
        }
    </style>
</head>
<body class="container">
    <h1>URL Annotator</h1>
    <form id="urlForm" class="form-inline">
        <div class="form-group">
            <label for="urlInput" class="me-2">Enter URL:</label>
            <input type="url" id="urlInput" class="form-control me-2" required>
            <button type="submit" class="btn btn-primary">Load</button>
        </div>
    </form>
    <div id="iframeContainer" class="my-3">
        <iframe id="urlIframe" width="100%" height="100%"></iframe>
    </div>
    <h2>Annotated URLs with textboxes:</h2>
    <div id="annotatedUrls"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    
    <script>
        const urlForm = document.getElementById("urlForm");
        const urlInput = document.getElementById("urlInput");
        const urlIframe = document.getElementById("urlIframe");
        const annotatedUrls = document.getElementById("annotatedUrls");

        urlForm.addEventListener("submit", (event) => {
            event.preventDefault();
            const url = urlInput.value;
            urlIframe.src = url;
            annotateUrl(url);
        });

        urlIframe.addEventListener("load", () => {
            const iframeUrl = urlIframe.contentWindow.location.href;
            if (iframeUrl !== "about:blank") {
                annotateUrl(iframeUrl);
            }
        });

        function annotateUrl(url) {
            const urlItem = document.createElement("div");
            urlItem.className = "urlItem";
            
            const urlSpan = document.createElement("span");
            urlSpan.textContent = url;
            urlItem.appendChild(urlSpan);
            
            const textBox = document.createElement("input");
            textBox.type = "text";
            textBox.placeholder = "Add annotation";
            urlItem.appendChild(textBox);

            annotatedUrls.appendChild(urlItem);
        }
    </script>
</body>
</html>
