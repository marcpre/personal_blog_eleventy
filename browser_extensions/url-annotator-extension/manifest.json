{
    "manifest_version": 3,
    "name": "URL Annotator",
    "version": "1.0",
    "description": "Annotate URLs while browsing",
    "permissions": ["activeTab", "tabs", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "service_worker": "background_worker.js"
    }
  }
  